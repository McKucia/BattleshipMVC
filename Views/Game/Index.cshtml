@model BattleshipMVC.Models.Player
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("NewGame", "Game", FormMethod.Post))
{
    <h2 style="color: white;">Podaj swoje imię:</h2>
    @Html.TextBoxFor(p => p.Name, new { @class = "text-box", autocomplete = "off" })
    <input type="submit" value="Graj!" class="button" />
}